@model RMS.Models.OrderItem

@{
    ViewData["Title"] = "Edit Item";
}

<div class="h2">Edit Item</div>

<div class="row col-md-4">
    <form asp-action="Edit">
        <div class="form-group pt-1">
            <label class="control-label">Product</label>
            <div class="form-control">@ViewBag.ProductName</div>
        </div>
        <div class="form-group pt-1 col-md-5">
            <label for="Quantity" class="control-label">Quantity</label>
            <input asp-for="Quantity" type="number" min="1" step="1" name="Quantity" class="form-control" />
        </div>
        <div class="form-group pt-1 col-md-5">
            <label for="Discount" class="control-label">Discount</label>
            <input asp-for="Discount" type="number" min="0" max="1" step="0.01" name="Discount" class="form-control" />
        </div>
        <div class="form-group pt-2">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>
