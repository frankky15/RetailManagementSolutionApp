@model RMS.Models.Brand

@{
    ViewData["Title"] = "Brand Details";
}

<h1>Details</h1>

<div>
    <h4>Brand</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>

        <hr>

        <h4>Products</h4>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        ProductId
                    </th>
                    <th>
                        ProductName
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BrandId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
