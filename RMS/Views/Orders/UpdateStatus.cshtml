@using RMS.Models
@model RMS.Models.Order

@{
    ViewData["Title"] = "Update Order Status";
}

<h1>Update</h1>

<h4>Order Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateStatus">
            <div class="form-group">
                <label for="Status" class="control-label">Select Store</label>
                <select name="Status" class="form-control" asp-items="Html.GetEnumSelectList<OrderStatus>()"></select>
            </div>
            <div class="form-group pt-1">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model?.OrderId">Back to Details</a>
</div>
